{
  "name": "emotion-journey",
  "version": "0.1.0",
  "private": true,
  "description": "Emotion Journey monorepo (Web PWA + rule-engine AI)",
  "packageManager": "pnpm@10.18.0",
  "scripts": {
    "dev": "pnpm --filter @emotion-journey/web dev",
    "build": "pnpm -r --if-present build",
    "lint": "pnpm -r --if-present lint",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "typecheck": "pnpm -r --if-present typecheck",
    "db:generate": "pnpm --filter @emotion-journey/web db:generate",
    "db:migrate": "pnpm --filter @emotion-journey/web db:migrate",
    "db:studio": "pnpm --filter @emotion-journey/web db:studio",
    "format": "prettier --check .",
    "format:write": "prettier --write ."
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^20.19.0",
    "eslint": "^9.39.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}